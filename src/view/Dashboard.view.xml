<mvc:View
	controllerName="ffa.mastering.view.Dashboard"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.suite.ui.commons"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		id="idDashboardPage"
		enableScrolling="false"
		showHeader="true"
		title="Realtime Mastering Analytics Dash">
		<headerContent>
			<Button
				text="Run"
				press="onRunPress"
				visible="false" />
		</headerContent>
		<content>
			<l:Grid
				width="100%"
				defaultSpan="XL6 L6 M6 S12"
				class="sapUiTinyMarginTop">
				<l:content>
					<c:ChartContainer
						showFullScreen="true"
						showPersonalization="false"
						autoAdjustHeight="false"
						showZoom="false"
						showLegend="true"
						contentChange="attachContentChange"
						title="BI challenges">
						<c:content>
							<c:ChartContainerContent
								icon=""
								title="Title">
								<c:content>
									<viz:VizFrame id="idVizFrameDonut" uiConfig="{applicationSet:'fiori'}" height="350px" width="450px"></viz:VizFrame>
								</c:content>
							</c:ChartContainerContent>
						</c:content>
					</c:ChartContainer>

					<c:ChartContainer
						showFullScreen="true"
						showPersonalization="false"
						autoAdjustHeight="false"
						showZoom="false"
						showLegend="true"
						contentChange="attachContentChange"
						title="Analytics maturity vs data science driven competitiveness">
						<c:content>
							<c:ChartContainerContent
								icon=""
								title="Title">
								<c:content>
									<viz:VizFrame id="idVizFrameColumn" uiConfig="{applicationSet:'fiori'}" height="350px" width="450px"></viz:VizFrame>
								</c:content>
							</c:ChartContainerContent>
						</c:content>
					</c:ChartContainer>

					<c:ChartContainer
						showFullScreen="true"
						showPersonalization="false"
						autoAdjustHeight="false"
						showZoom="false"
						showLegend="false"
						contentChange="attachContentChange"
						title="Data driving business">
						<c:content>
							<c:ChartContainerContent
								icon=""
								title="Title">
								<c:content>
									<viz:VizFrame id="idVizFrameHeatMap" uiConfig="{applicationSet:'fiori'}" height="350px" width="450px"></viz:VizFrame>
								</c:content>
							</c:ChartContainerContent>
						</c:content>
					</c:ChartContainer>

					<c:ChartContainer
						showFullScreen="true"
						showPersonalization="false"
						autoAdjustHeight="false"
						showZoom="false"
						showLegend="true"
						contentChange="attachContentChange"
						title="Required forecast improvement for project initiation">
						<c:content>
							<c:ChartContainerContent
								icon=""
								title="Title">
								<c:content>
									<viz:VizFrame id="idVizFramePie" uiConfig="{applicationSet:'fiori'}" height="350px" width="450px"></viz:VizFrame>
								</c:content>
							</c:ChartContainerContent>
						</c:content>
					</c:ChartContainer>

					<!-- Press counter -->
					<Text
						id="idPressesText"
						class="ffaPressText"
						text="{= ${update>/count} > 0 ? ${update>/count} + ' button presses' : 'Waiting for a button press' }" />

					<!-- Jelly bean counter -->
					<Text
						id="idPressesText"
						class="ffaJellyBeansText"
						text="{= ${update>/jelly_beans} > 0 ? 'Approx. ' + ${update>/jelly_beans} + ' jelly beans dispensed' : 'No jelly beans dispensed since refresh' }" />
        </l:content>
        <!--Above is the chart area-->
    	</l:Grid>
			<viz:Popover id="idPopOver"></viz:Popover>
		</content>
	</Page>
</mvc:View>
